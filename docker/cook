#!/bin/bash

SOURCE=${BASH_SOURCE[0]}
local_dir="$( dirname $SOURCE)"

sudo docker build -t cook-maker .
sudo docker rm cook-maker
sudo docker run -it -v $(pwd):/build --name cook-maker cook-maker
sudo cp $local_dir/docker_compose.yml .
sudo cp $local_dir/frontend_Dockerfile .
sudo cp $local_dir/api_Dockerfile api/Dockerfile
sudo cp $local_dir/.env .
